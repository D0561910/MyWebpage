            display: block;
        }

        .icon {
            width: 70px;
            margin-left: auto;
            margin-right: auto;
            transition: 2s ease-in-out;
        }

        .icon:hover {
            opacity: 0.5;
            transform: rotate(900deg);
        }

        .label {
            font-size: 14px;
            margin-top: 10px;
            text-align: center;
            color: #fff;
        }

        .back-btn {
            background: linear-gradient(to right, #6065D9, #17D7FA);
            border: none;
            border-radius: 100px;
            font-size: 18px;
            font-weight: 300;
            color: #fff;
            display: block;
            width: 150px;
            height: 40px;
            margin: 0 auto;
            outline: none;
            cursor: pointer;
        }

        .btn-area {
            margin-left: -80%;
            margin-top: 50px;
            margin-bottom: -5%;
        }
    </style>
</head>

